{
  "compilerOptions": {
    "target": "es5",                          
    "module": "commonjs",                                        
    "outDir": "./build",                          
    "rootDir": "./src",
    "typeRoots": [
      "src/@types",
      "./node_modules/@types",
    ],   
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "__tests__/**/*.test.ts"
  ]
}